@{
    ViewData["Title"] = "Home page";
}
<style>
    .stone{  border-radius: 10px 10px 0 0; cursor: pointer; }
</style>

@using (Html.BeginForm("Step1", "Wiz", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <h4 class="">1. Число усопших</h4>

    <div class="row mt-3">
        <div class="col-auto text-center">
            <label class="px-4" style="cursor: pointer;">
                <input name="count" checked type="radio" onchange="ColChange(1)"/> <i class="fa fa-user fs-3"></i>
                
            </label>
        </div>
        <div class="col-auto  text-center">
            <label class="px-4" style="cursor: pointer;">
                <input name="count" type="radio" onchange="ColChange(2)" /> <i class="fa fa-user fs-3"></i> <i class="fa fa-user  fs-3"></i>
                
            </label>
        </div>
        <div class="col-auto text-center">
            <label class="px-4" style="cursor: pointer;">
                <input name="count" type="radio" onchange="ColChange(3)" /> <i class="fa fa-user fs-3"></i> <i class="fa fa-user fs-3"></i> <i class="fa fa-user fs-3"></i>
                
            </label>
        </div>
    </div>

    <h4 class="mt-3">2. Ориентация</h4>

    <table class="table table-borderless w-auto">
        <tr>
            <td style="text-align: center;"><img onclick="$('#o1').click()" id="img1" src="/img/v1.png" class="stone" style="width: 12vh; height: 24vh;" /></td>
            <td style="text-align: center;"><img onclick="$('#o2').click()" id="img2" src="/img/h1.png" class="stone" style="width: 24vh; height: 12vh;margin-top: 12vh;" /></td>
            <td style="text-align: center;" ><img onclick="$('#o3').click()" id="img3" src="/img/split.png" class="stone" style="width: 24vh; height: 24vh; display: none;" /></td>
        </tr>
        <tr>
            <td class="text-center"><label><input type="radio" name="IsVert" onchange="SetVert(true)" id="o1" checked="checked" value="true" /> Вертикальная</label></td>
            <td class="text-center"><label><input type="radio" name="IsVert" onchange="SetVert(false)" id="o2" value="false" /> Горизонтальная</label></td>
            <td class="text-center"><label style="display: none;" id="lSplit"><input type="radio" name="IsVert" onchange="SetVert(true)" id="o3" value="false" /> Сплит</label></td>
        </tr>
    </table>

    <h4 class="mt-3">3. Размер</h4>

    <div class="row">
        <div class="col-md-2">
            <select class="form-select" name="size" id="ddlSize">
                <!option value="40">40 x 80</!option>
                <!option value="50">50 x 100</!option>
                <!option value="60">60 x 120</!option>
            </select>
        </div>
    </div>


    
    <h4 class="mt-3">4. Фото</h4>

    <div class="row">
        <div class="col-sm-3" id="f1">Фото №1<input type="file" name="file" required class="form-control" /></div>
        <div class="col-sm-3" required style="display: none;" id="f2">Фото №2<input type="file" name="file" class="form-control" /></div>
        <div class="col-sm-3" required style="display: none;" id="f3">Фото №3<input type="file" name="file" class="form-control" /></div>
    </div>

    <div class="mt-4">
        <input type="submit" class="btn btn-primary" value="Дальше"/>
    </div>
}
@section Scripts
{
    <script>
        function SetVert(isVert) {
            var s = document.getElementById('ddlSize');


            s.options[0].text = isVert ? "40 x 80" : "80 x 40";
            s.options[1].text = isVert ? "50 x 100" : "100 x 50";
            s.options[2].text = isVert ? "60 x 120" : "120 x 60";


        }

        function ColChange(count) {
            document.getElementById('img1').src="/img/v" + count + ".png";
            document.getElementById('img2').src="/img/h" + count + ".png";
            document.getElementById('img3').src="/img/split" + count + ".png";
            if (count > 1) {
                document.getElementById('img3').style.display = 'block';
                document.getElementById('lSplit').style.display = 'inline';
            } else {
                document.getElementById('img3').style.display = 'none';
                document.getElementById('lSplit').style.display = 'none';
            }

            for (var i = 1; i < 4; i++) {
                if (i <= count) {
                    $('#f' + i).show();
                } else {
                    $('#f' + i).hide();
                }
            }
        }
    </script>
}
